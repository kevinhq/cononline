= form_for @payment do |f|
  - if @payment.errors.any?
    #error_explanation
      %h2= "#{pluralize(@payment.errors.count, "error")} prohibited this payment from being saved:"
      %ul
        - @payment.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :order_id
    = f.number_field :order_id
  .field
    = f.label :vendor_id
    = f.number_field :vendor_id
  .field
    = f.label :amount
    = f.number_field :amount
  .field
    = f.label :method
    = f.text_field :method
  .actions
    = f.submit 'Save'
